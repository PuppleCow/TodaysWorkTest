<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="306dp"
                android:layout_height="760dp"
                android:orientation="vertical" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/checkin_textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/notosans_bold"
                android:text="비대면 체크인"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/notosans_bold"
                android:text="집합시설 입장을 위한"
                android:textColor="#575756"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/notosans_bold"
                android:text="비대면 체크인"
                android:textColor="#575756"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:fontFamily="@font/notosans_medium"
                android:text="* 관련 법률에 따라 허위 작성시 처벌 받을 수 있음을 알려드립니다."
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#A0A0A0"
                android:backgroundTint="#A0A0A0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_in_textView5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="1. 호흡곤란, 기침, 인후통, 미각/후각 상실 증상이 있나요?" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/check_in_radioButton5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#422A81"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/check_in_radioButton6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#422A81"
                        android:text="아니요" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_in_textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="2. 2주 이내에 해외 방문한 적이 있나요?" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/check_in_radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#422A81"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/check_in_radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#422A81"
                        android:text="아니요" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#03A9F4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_in_textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="3. 안전모를 착용하셨나요?" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/check_in_radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#422A81"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/check_in_radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#422A81"
                        android:text="아니요" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/check_in_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round"
        android:backgroundTint="#422A81"
        android:text="안전 매뉴얼 퀴즈로 이동"
        android:textColor="#FFFFFF"
        app:cornerRadius="20dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.worker.home.complaint.WriteComplaintActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/complaint_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/notosans_bold"
                android:text="민원접수"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"></View>

            <Spinner
                android:id="@+id/complaint_spinner_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_outline_422a81"
                android:popupBackground="@drawable/button_outline_422a81" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"></View>

            <EditText
                android:id="@+id/complaint_editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="384dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/notosans_medium"
                android:gravity="start|top"
                android:hint="민원 내용을 입력해주세요"
                android:inputType="textMultiLine"
                android:textSize="14dp" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/complaint_imageView"
                    android:layout_width="291dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/eye_open" />

                <Button
                    android:id="@+id/complaint_button_image_delete"
                    android:layout_width="22dp"
                    android:layout_height="19dp"
                    android:background="@drawable/ic_baseline_delete_forever_24"
                    android:backgroundTint="@color/black" />

            </LinearLayout>

            <Button
                android:id="@+id/complaint_button_enroll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_422a81"
                android:backgroundTint="@color/button_color_422a81"
                android:elevation="3dp"
                android:fontFamily="@font/notosans_medium"
                android:text="등록"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"></View>

            <Button
                android:id="@+id/complaint_button_mycomplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="나의 민원내용보기" />

        </LinearLayout>
    </ScrollView>


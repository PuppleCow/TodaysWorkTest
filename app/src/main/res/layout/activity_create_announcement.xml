<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.worker.announcement.CreateAnnouncementActivity">

    <TextView
        android:id="@+id/create_announcement_create_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:text=" 공지사항 작성"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/create_announcement_editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="제목을 입력해주세요"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/create_announcement_editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="공지사항을 입력해주세요"
        android:inputType="textMultiLine" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/create_announcement_imageView"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/create_announcement_button_image_delete"
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:background="@drawable/ic_baseline_delete_forever_24"
            android:backgroundTint="@color/black" />

        <Button
            android:id="@+id/create_announcement_button_enroll"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round"
            android:backgroundTint="#422A81"
            android:fontFamily="@font/notosans_bold"
            android:text="등록하기"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/create_announcement_text_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
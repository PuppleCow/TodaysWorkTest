<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparet_background"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".ui.login.ResettingPassword1">


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/resetting1_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="비밀번호 재설정"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/resetting1_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textAlignment="textStart"
        android:textColor="@color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/resetting1_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="이름을 입력해주세요"
        android:inputType="textPersonName"
        android:paddingStart="17dp"
        android:textColor="@color/white"
        android:textColorHint="#B3FFFFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/resetting1_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textColor="@color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:orientation="horizontal"
        android:paddingStart="17dp">

        <EditText
            android:id="@+id/resetting1_phone"
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="010-"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF" />

        <Button
            android:id="@+id/resetting1_button1"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/transfarent_button"
            android:text="인증번호 받기"
            android:textColor="#422A81" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/resetting1_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textColor="@color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/resetting1_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="인증번호를 입력하세요"
        android:inputType="phone"
        android:paddingStart="17dp"
        android:textColor="@color/white"
        android:textColorHint="#B3FFFFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/resetting1_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/design_default_color_error" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/resetting1_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transfarent_button"
        android:backgroundTint="#B3FFFFFF"
        android:text="다음"
        android:textColor="#422A81"
        app:cornerRadius="20dp" />
</LinearLayout>
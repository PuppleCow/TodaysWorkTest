<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".temporaryStorage.WorkersStatusActivity">

    <TextView
        android:id="@+id/workers_status_workers_status_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="근무자현황"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/workers_status_spinner_workers_group1"
            android:layout_width="305dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/workers_status_spinner_button_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="조회하기" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workers_status_text_member1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="팀 근무인원 " />

        <TextView
            android:id="@+id/workers_status_text_member_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="명" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/workers_status_recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="454dp" />

            <ListView
                android:id="@+id/workers_status_listview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </ListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
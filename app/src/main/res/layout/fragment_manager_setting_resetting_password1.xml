<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.ResettingPassword1">

    <TextView
        android:id="@+id/manager_resetting_password1_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/manager_resetting_password1_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름" />

    <EditText
        android:id="@+id/manager_resetting_password1_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름을 입력해주세요"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/manager_resetting_password1_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/manager_resetting_password1_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="010-"
            android:inputType="phone" />

        <Button
            android:id="@+id/manager_resetting_password1_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="인증번호 받기" />
    </LinearLayout>

    <TextView
        android:id="@+id/manager_resetting_password1_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증번호" />

    <EditText
        android:id="@+id/manager_resetting_password1_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="인증번호를 입력하세요"
        android:inputType="phone" />

    <TextView
        android:id="@+id/manager_resetting_password1_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/manager_resetting_password1_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음" />
</LinearLayout>
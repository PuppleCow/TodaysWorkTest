<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.ResettingPassword1">

    <TextView
        android:id="@+id/resetting_password2_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resetting_password2_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/resetting_password2_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:maxLength="6" />

    <TextView
        android:id="@+id/resetting_password2_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인" />

    <EditText
        android:id="@+id/resetting_password2_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:maxLength="6" />

    <TextView
        android:id="@+id/resetting_password2_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호는 숫자만을 이용하여 " />

    <TextView
        android:id="@+id/resetting_password2_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6자로 입력해주세요" />

    <Button
        android:id="@+id/resetting_password2_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음" />
</LinearLayout>